{
	"name": "frontend",
	"version": "0.0.0",
	"private": true,
	"license": "MIT",
	"type": "module",
	"scripts": {
		"dev": "vite",
		"build": "pnpm generate && tsc && vite build --outDir ../raspi/public",
		"generate": "protoc -I=../raspi/proto control.proto --js_out=import_style=commonjs:./src/proto --grpc-web_out=import_style=typescript,mode=grpcwebtext:./src/proto",
		"generate-ts": "protoc -I=../raspi/proto control.proto --ts_out ./src/proto",
		"preview": "vite preview",
		"prettier": "prettier --write ."
	},
	"prettier": {
		"useTabs": true,
		"endOfLine": "lf",
		"semi": true
	},
	"eslintConfig": {
		"extends": "preact"
	},
	"alias": {
		"react": "preact/compat",
		"react-dom": "preact/compat"
	},
	"devDependencies": {
		"@preact/preset-vite": "^2.5.0",
		"@types/json-schema": "^7.0.12",
		"prettier": "^2.8.8",
		"typescript": "^5.1.6",
		"vite": "^4.4.7"
	},
	"dependencies": {
		"@jaames/iro": "^5.5.2",
		"@protobuf-ts/grpcweb-transport": "^2.9.1",
		"@protobuf-ts/plugin": "^2.9.1",
		"@protobuf-ts/runtime": "^2.9.1",
		"@protobuf-ts/runtime-rpc": "^2.9.1",
		"@xstate/fsm": "^1.6.5",
		"clsx": "^1.2.1",
		"dset": "^3.1.2",
		"goober": "^2.1.13",
		"google-protobuf": "^3.21.2",
		"grpc-web": "^1.4.2",
		"preact": "^10.16.0",
		"preact-feather": "^4.2.1",
		"preact-iso": "^2.3.1"
	}
}
